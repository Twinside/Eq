Name:       FormulaRenderer
Version:    1.0
Synopsis:   Render math formula in ASCII, and works under windows 
Build-Type: Simple
Cabal-Version: >= 1.2
Description: Lalalal
Author: Vincent Berthoux
Maintainer: Vincent Berthoux

Executable eq
    Main-Is: formulaMain.hs
    ghc-options:-Wall
    extensions: CPP
    cpp-options: -D_DEBUG
    Build-Depends: base >= 4.1
                 , parsec >= 3.0
                 , HaXmL >= 1.9
                 , array
                 , mtl
                 , containers
                 , filepath
                 , utf8-string >= 0.3.5

Executable iotest
    Main-Is: EqManips/Tests/iotestSuite.hs
    ghc-options: -Wall -O2
    extensions: CPP
    cpp-options: -D_DEBUG
    Build-Depends: base >= 4.0
                 , parsec >= 3.0
                 , array
                 , mtl
                 , filepath
                 , containers
                 , QuickCheck

